# Camera
SRC=rtsp://ajmalrasi:ajmalrasi@192.168.3.175:554/stream1

# Telegram (fill these on the Jetson, not here)
TG_BOT=
TG_CHAT=

# Model settings (optional)
YOLO_MODEL=yolov8n.pt
YOLO_ENGINE=/workspace/work/yolov8n.engine
CONF_THRESH=0.80
COOLDOWN_SEC=10
VID_STRIDE=6     # process 1 in 6 frames
MAX_FPS=2        # cap to ~2 inferences/sec
IMG_SIZE=608

# Detection burst mode
MAX_FPS_ON_DETECT=0       # 0 = unlimited
REARM_TIME_ON_DETECT=5    # seconds to keep burst mode after last detection

# Tracking & anti-spam
TRACKER=bytetrack.yaml
MIN_FRAMES=3
MIN_PERSIST_SEC=1.2
REARM_SEC=10
RATE_WINDOW_SEC=5

DRAW_CLASSES=person,car,dog,cat,motorcycle
TRIGGER_CLASSES=person

# Throttle + stability
RATE_WINDOW_SEC=60     # at most one message per minute
REARM_SEC=30           # forget old track IDs after 30s (reduces re-alert spam)
MIN_FRAMES=4           # require a few consecutive frames
MIN_PERSIST_SEC=1.5    # and a little time in view
