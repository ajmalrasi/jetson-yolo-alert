# --- Source / IO ---
SRC=0
YOLO_MODEL=yolov8n.pt
YOLO_ENGINE=yolov8n.engine
IMG_SIZE=640
CONF_THRESH=0.80
VID_STRIDE=6
SAVE_DIR=/workspace/work/alerts
DRAW=1

# --- Presence / Tracking / Alerts ---
TRIGGER_CLASSES=person
DRAW_CLASSES=person,car,dog,cat
MIN_FRAMES=3
MIN_PERSIST_SEC=1.0
REARM_SEC=10
RATE_WINDOW_SEC=5
TRACKER=bytetrack.yaml

# --- Adaptive Rate (new modular pipeline) ---
BASE_FPS=2
HIGH_FPS=20           # 0 = uncapped
BOOST_ARM_FRAMES=3
BOOST_MIN_SEC=2.0
COOLDOWN_SEC=5.0

# --- Legacy alert.py pacing (still works if you run alert.py) ---
MAX_FPS=2
MAX_FPS_ON_DETECT=0   # 0 = uncapped
REARM_TIME_ON_DETECT=5

# --- Optional zone polygon (x,y;x,y;...) ---
ZONE=

# --- Telegram (optional) ---
TELEGRAM_TOKEN=
TELEGRAM_CHAT_ID=
